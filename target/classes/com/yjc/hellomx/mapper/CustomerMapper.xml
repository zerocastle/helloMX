<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yjc.hellomx.mapper.CustomerMapper">

	<select id="getList"
		resultType="com.yjc.hellomx.domain.CustomerVO">
		select * from customer
	</select>
	<insert id="insertList"
		parameterType="com.yjc.hellomx.domain.CustomerVO">
		insert into customer
		values
		(#{cid},#{name},#{birthday},#{password},#{telephone},#{email},#{address},#{regdate})
	</insert>
	<select id="get" resultType="com.yjc.hellomx.domain.CustomerVO">
		select * from customer where cid = #{cid}
	</select>

	<select id="login"
		resultType="com.yjc.hellomx.domain.CustomerVO">
		select * from customer where cid=#{cid} and password =#{password}
	</select>

</mapper>